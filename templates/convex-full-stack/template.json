{
  "name": "convex-full-stack",
  "displayName": "Convex Full-Stack",
  "description": "Full-stack app with Convex real-time database and TanStack Start",
  "version": "1.0.0",
  "dependencies": ["core"],
  "prompts": [],
  "exclude": [],
  "defaults": {
    "webFramework": "tanstack-start",
    "addons": ["convex", "tanstack-query"]
  },
  "baseCommand": {
    "command": "bunx create-convex@latest -t tanstack-start {{projectName}} --no-git",
    "workdir": "{{parentDir}}"
  },
  "postProcess": {
    "remove": [
      "eslint.config.mjs",
      ".prettierrc",
      ".prettierignore",
      "convex/myFunctions.ts",
      "convex/schema.ts"
    ],
    "removeDeps": ["@convex-dev/eslint-plugin", "@tanstack/eslint-config", "eslint", "prettier"],
    "addDevDeps": {
      "@biomejs/biome": "^2.3.11",
      "lefthook": "^1.11.0",
      "@commitlint/cli": "^19.0.0",
      "@commitlint/config-conventional": "^19.0.0",
      "oxlint": "^0.16.0"
    },
    "updateScripts": {
      "typecheck": "tsc --noEmit",
      "lint": "biome check .",
      "lint:fix": "biome check --write .",
      "format": "biome format --write .",
      "check": "bun run typecheck && biome check . && oxlint"
    }
  },
  "tasks": [
    {
      "name": "install",
      "description": "Install dependencies",
      "command": "bun install",
      "condition": "always",
      "continueOnError": false
    },
    {
      "name": "lefthook",
      "description": "Install git hooks",
      "command": "bunx lefthook install",
      "condition": "always",
      "continueOnError": true
    },
    {
      "name": "convex-init",
      "description": "Initialize Convex backend",
      "command": "npx convex dev --once",
      "condition": "if-convex",
      "continueOnError": true
    }
  ]
}
