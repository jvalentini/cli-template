{
  "name": "convex-saas",
  "displayName": "Convex SaaS Starter",
  "description": "Full-stack SaaS app with Convex, Stripe billing, Auth (OTP + GitHub), TanStack Start",
  "version": "1.0.0",
  "dependencies": ["core"],
  "prompts": [],
  "exclude": [],
  "defaults": {
    "webFramework": "tanstack-start",
    "addons": ["convex", "tanstack-query", "stripe", "auth"]
  },
  "baseCommand": {
    "command": "bunx create-convex@latest -t tanstack-start {{projectName}} --no-git",
    "workdir": "{{parentDir}}"
  },
  "postProcess": {
    "remove": ["eslint.config.mjs", ".prettierrc", ".prettierignore", "convex/myFunctions.ts"],
    "removeDeps": ["@convex-dev/eslint-plugin", "@tanstack/eslint-config", "eslint", "prettier"],
    "addDeps": {
      "@auth/core": "^0.34.1",
      "@convex-dev/auth": "^0.0.43",
      "@convex-dev/react-query": "^0.0.0-alpha.11",
      "@radix-ui/react-dropdown-menu": "^2.1.1",
      "@radix-ui/react-select": "^2.1.1",
      "@radix-ui/react-slot": "^1.1.0",
      "@radix-ui/react-switch": "^1.1.0",
      "@react-email/components": "^0.0.22",
      "@tanstack/react-form": "^0.26.4",
      "@xixixao/uploadstuff": "^0.0.5",
      "class-variance-authority": "^0.7.0",
      "clsx": "^2.1.1",
      "convex-helpers": "^0.1.50",
      "effect": "^3.12.0",
      "lucide-react": "^0.416.0",
      "oslo": "^1.2.1",
      "resend": "^3.2.0",
      "stripe": "^16.6.0",
      "tailwind-merge": "^2.4.0"
    },
    "addDevDeps": {
      "@biomejs/biome": "^2.0.0",
      "@commitlint/cli": "^19.0.0",
      "@commitlint/config-conventional": "^19.0.0",
      "@edge-runtime/vm": "^5.0.0",
      "@tailwindcss/vite": "^4.1.13",
      "concurrently": "~9.2.1",
      "convex-test": "^0.0.41",
      "lefthook": "^1.11.0",
      "oxlint": "^0.16.0",
      "tailwindcss": "^4.1.13",
      "vitest": "^4.0.16"
    },
    "updateScripts": {
      "postinstall": "bunx --bun @tanstack/router-cli generate",
      "dev": "npx convex dev --once && concurrently -r npm:dev:web npm:dev:convex",
      "dev:web": "vite dev",
      "dev:convex": "npx convex dev",
      "typecheck": "tsc --noEmit",
      "lint": "biome check .",
      "lint:fix": "biome check --write .",
      "format": "biome format --write .",
      "check": "bun run typecheck && biome check . && oxlint",
      "test": "vitest run",
      "test:watch": "vitest"
    }
  }
}
