{
  "name": "core",
  "displayName": "Core Tooling",
  "description": "Shared tooling and configuration included in all projects",
  "version": "1.0.0",
  "dependencies": [],
  "prompts": [],
  "exclude": [],
  "tasks": [
    {
      "name": "install",
      "description": "Install dependencies",
      "command": "bun install",
      "condition": "always",
      "continueOnError": false
    },
    {
      "name": "git-init",
      "description": "Initialize git repository",
      "command": "git init",
      "condition": "if-no-git",
      "continueOnError": true
    },
    {
      "name": "lefthook",
      "description": "Install git hooks",
      "command": "bunx lefthook install",
      "condition": "always",
      "continueOnError": true
    }
  ]
}
