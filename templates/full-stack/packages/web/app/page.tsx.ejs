<% if (webFramework === 'nextjs') { -%>
'use client'

import { useEffect, useState } from 'react'

const API_URL = process.env.NEXT_PUBLIC_API_URL || 'http://localhost:3001'

interface ApiInfo {
  name: string
  version: string
}

export default function HomePage() {
  const [apiInfo, setApiInfo] = useState<ApiInfo | null>(null)
  const [loading, setLoading] = useState(true)
  const [error, setError] = useState<string | null>(null)

  useEffect(() => {
    fetch(`${API_URL}/`)
      .then((res) => {
        if (!res.ok) throw new Error('API request failed')
        return res.json()
      })
      .then((data) => {
        setApiInfo(data)
        setLoading(false)
      })
      .catch((err) => {
        setError(err.message)
        setLoading(false)
      })
  }, [])

  return (
    <main style={{ padding: '2rem', maxWidth: '600px', margin: '0 auto' }}>
      <h1><%= projectName %></h1>
      <p><%= description %></p>

      <div style={{ marginTop: '2rem' }}>
        <h2>API Status</h2>
        {loading ? (
          <p>Connecting to API...</p>
        ) : error ? (
          <p style={{ color: 'red' }}>Error: {error}</p>
        ) : apiInfo ? (
          <div>
            <p>Connected to: {apiInfo.name}</p>
            <p>Version: {apiInfo.version}</p>
          </div>
        ) : (
          <p>No API info available</p>
        )}
      </div>

      <div style={{ marginTop: '2rem' }}>
        <h2>Getting Started</h2>
        <ul>
          <li>
            Edit <code>app/page.tsx</code> to modify this page
          </li>
          <li>
            API endpoint: <code>{API_URL}</code>
          </li>
          <li>
            Run <code>bun run dev</code> to start development
          </li>
        </ul>
      </div>
    </main>
  )
}
<% } -%>
